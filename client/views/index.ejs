        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">




            <ul class="navbar-nav ml-auto d-lg-none">
                <li class="nav-item p-1">
                    <a id="loginButton" class="btn btn-outline-primary btn-block" data-toggle="modal"
                        data-target="#loginModalTelephone">Login</a>
                </li>
                <li class="nav-item p-1 ">
                    <a id="registerButton" class="btn btn-outline-dark btn-block" data-toggle="modal"
                        data-target="#registerModalTelephone">Register</a>
                </li>
            </ul>

            <ul class="navbar-nav mr-auto d-lg-none">
                <li class="nav-item">
                    <a class="nav-link text-center font-weight-bold d-none " data-toggle="modal"
                        id="userNicknameTelephone" data-target="#nicknameTelephone">Nickname</a>
                </li>
                <li class="nav-item" id="linkitemli">
                    <a class="nav-link text-center" onclick="updateHash('main')" data-hash="main" data-toggle="collapse"
